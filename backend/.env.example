# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGODB_URI=your_mongodb_connection_string_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Encryption Configuration
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))" to generate
ENCRYPTION_KEY=your_32_byte_encryption_key_here_change_this
ENCRYPTION_IV_LENGTH=16

# Integrity Secret for Tamper Detection
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))" to generate
INTEGRITY_SECRET=your_integrity_secret_key_here_change_this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Bitcoin Network (use mainnet for real transactions, testnet for demo)
BITCOIN_NETWORK=testnet

# Email Configuration (Gmail App Password)
# To generate: Google Account > Security > 2-Step Verification > App Passwords
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password_here
